# ================================================================
# Base44 Invoice Integration - Environment Variables
# ================================================================

# -------------------- Azure Form Recognizer --------------------
# (אופציה 1 - מומלץ!)
AZURE_OCR_KEY=your_azure_subscription_key_here
AZURE_OCR_ENDPOINT=https://prilinqdocai.cognitiveservices.azure.com

# -------------------- DigiParser --------------------
# (אופציה 2 - אלטרנטיבה)
DIGIPARSER_API_KEY=your_digiparser_api_key_here
DIGIPARSER_PARSER_ID=invoice_parser

# -------------------- OpenAI --------------------
# (אופציה 3 - גמיש ביותר)
OPENAI_API_KEY=sk-your_openai_api_key_here

# -------------------- Base44 --------------------
BASE44_APP_ID=your_base44_app_id_here
BASE44_API_KEY=your_base44_api_key_here

# -------------------- Server --------------------
PORT=3000
NODE_ENV=development

# -------------------- Priority ERP (אופציונלי) --------------------
PRIORITY_API_URL=https://your-priority-server.com/api
PRIORITY_USERNAME=your_username
PRIORITY_PASSWORD=your_password
